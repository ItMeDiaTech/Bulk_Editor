{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Agent Configuration Schema",
  "type": "object",
  "properties": {
    "allowWriteGlobs": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "List of glob patterns for files/directories that can be written to"
    },
    "denyWriteGlobs": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "List of glob patterns for files/directories that cannot be written to"
    },
    "maxPatchLines": {
      "type": "integer",
      "minimum": 1,
      "description": "Maximum number of lines allowed in a patch"
    },
    "commands": {
      "type": "object",
      "properties": {
        "build": {
          "type": "string",
          "description": "Command to build the project"
        },
        "test": {
          "type": "string",
          "description": "Command to run tests"
        },
        "lint": {
          "type": "string",
          "description": "Command to run linting"
        },
        "format": {
          "type": "string",
          "description": "Command to format code"
        }
      },
      "additionalProperties": {
        "type": "string"
      },
      "description": "Available commands for the agent"
    },
    "pr": {
      "type": "object",
      "properties": {
        "base": {
          "type": "string",
          "description": "Base branch for pull requests"
        },
        "titlePrefix": {
          "type": "string",
          "description": "Prefix to add to pull request titles"
        }
      },
      "required": ["base"],
      "description": "Pull request configuration"
    }
  },
  "required": ["allowWriteGlobs", "commands"],
  "additionalProperties": false
}
